{
  "name": "DIABOT CloudOps Center",
  "description": "Trung tâm điều hành DIABOT: build, deploy, monitor, backup qua GPT.",
  "permissions": [
    "filesystem.read_write",
    "network.outbound",
    "github.repo_access",
    "ssh.exec",
    "s3.access"
  ],
  "entry_prompt": "#boltprompt",
  "actions": [
    {
      "name": "deploy",
      "script": "ops/deploy_viettel.sh"
    },
    {
      "name": "rollback",
      "script": "ops/rollback.sh"
    },
    {
      "name": "healthcheck",
      "script": "ops/healthcheck.sh"
    },
    {
      "name": "backup",
      "script": "ops/backup_cron.sh"
    }
  ]
}