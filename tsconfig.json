{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2017",
    "downlevelIteration": true,
    "paths": {
      "@packages/ai/*": ["packages/ai/src/*"],
      "@packages/core/*": ["packages/core/src/*"],
      "@packages/infra/*": ["packages/infra/src/*"],
      "@/*": ["./src/*"],
      "@/packages/*": ["packages/*/src"],
      "@ui/*": ["./src/interfaces/ui/*"],
      "@api/*": ["./src/interfaces/api/*"],
      "@components/*": ["./src/interfaces/ui/components/*"],
      "@styles/*": ["./src/interfaces/ui/styles/*"]
    },
    "lib": ["DOM", "ES2022"],
    "types": ["node"],
    "typeRoots": ["./types", "./node_modules/@types"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [{ "name": "next" }],
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "src/app/api/log/**/*.ts",
    "src/app/api/log/**/*.tsx",
    "src/app/api/chart/**/*.ts",
    "src/app/api/chart/**/*.tsx",
    "src/app/api/qa/**/*.ts",
    "src/app/api/qa/**/*.tsx",
    "src/app/admin/db-inspect/**/*.ts",
    "src/lib/**/*.ts",
    "src/lib/**/*.tsx",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "src/interfaces",
    "src/modules",
    "tests",
    "scripts",
    "apps",
    "packages",
    "public"
  ]
}
