# DIABOT Local Development Environment Template
# Copy this to .env.local and fill in your values

# ----- App Config -----
NODE_ENV=development
PORT=3000
AUTH_DEV_MODE=true

# ----- Database (PostgreSQL) -----
DATABASE_URL=postgresql://diabot:diabot@localhost:5432/diabot

# ----- Authentication (Local JWT) -----
AUTH_MODE=local
AUTH_SECRET=dev-secret-min-32-chars-change-in-production-XXXXXX
SESSION_SECRET=dev-session-secret-min-32-chars-YYYYYY
SESSION_COOKIE_NAME=diabot_session
SESSION_MAX_AGE=604800

# ----- Storage (Viettel Cloud S3) -----
STORAGE_PROVIDER=viettel
S3_ENDPOINT=https://s3-north1.viettelidc.com.vn
S3_REGION=vn-1
S3_BUCKET_HOT=diabot-dev
S3_ACCESS_KEY=your_access_key_here
S3_SECRET_KEY=your_secret_key_here

# ----- OpenAI -----
OPENAI_API_KEY=sk-your-openai-api-key-here
