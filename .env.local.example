# ----- Database Configuration (Postgres - Viettel) -----
DB_HOST=db
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=diabot

# ----- Storage Configuration (Viettel Cloud S3) -----
# Set STORAGE_PROVIDER to enable storage features
# Options: viettel, supabase, local, not_configured
STORAGE_PROVIDER=not_configured

# Viettel Cloud S3 credentials (proxied via DIA BRAIN)
DIA_BRAIN_STORAGE_PROXY_URL=https://brain-gateway.example.com/storage
VTS_ENDPOINT=https://s3.viettelcloud.vn
VTS_PUBLIC_BUCKET=diabot-public
VTS_PRIVATE_BUCKET=diabot-private

# ----- Application Configuration -----
NODE_ENV=production
PORT=3000
APP_VERSION=0.9.0
TZ=UTC

# ----- Client-side feature flags (require rebuild when changed) -----
NEXT_PUBLIC_AI_AGENT=demo
NEXT_PUBLIC_REWARDS=false
NEXT_PUBLIC_BG_SYNC=false
NEXT_PUBLIC_REALTIME=false
NEXT_PUBLIC_CHART_USE_DEMO=true
NEXT_PUBLIC_CHART_FALLBACK=false
NEXT_PUBLIC_KILL_SWITCH=false

# ----- Server-side feature flags (no rebuild required) -----
MEAL_MOCK_MODE=true
REMINDER_MOCK_MODE=true
AUTH_DEV_MODE=true
AI_CACHE_ENABLED=true
AI_BUDGET_ENABLED=false
AI_BUDGET_DROP_ON_EXCEEDED=true
AI_DISABLE_RETRY=false
AI_RULES_FALLBACK_ENABLED=true

# ----- Advanced AI features (server-side) -----
AI_GATEWAY_ENABLED=true
AI_COACH_ENABLED=true
AI_MEAL_ENABLED=true
AI_VOICE_ENABLED=true
AI_FAMILY_ENABLED=true
AI_REWARD_ENABLED=true
AI_PERSONALIZATION_DEEP=false
AI_MARKETPLACE=false
AI_FEDERATED_LEARNING=false
AI_GAMIFICATION_DEEP=false
